@model Taskmanager.Models.Task

<h2 class="text-center mt-5">Editare task</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            @using(Html.BeginForm(actionName: "Edit", controllerName: "Tasks", method: FormMethod.Post, routeValues: new {id = Model.Id }))
            {
                @Html.Label("Title", "Titlu Task")
                <br />
                @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("Description", "Descriere Task")
                <br />
                @Html.Editor("Description", new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
                <br />

                <br />

                <label>Selectati statusul</label>
                @Html.DropDownListFor(m => m.StatusId,
            new SelectList(Model.Stat, "Value", "Text"),
            "Selectati statusul", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.StatusId, null, new { @class = "text-danger" })
                <br />

                <br />

                <button class="btn btn-sm btn-success" type="submit">Modifica task</button>
            }
        </div>
    </div>
</div>