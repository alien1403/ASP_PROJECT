@model Taskmanager.Models.Task

@{
    ViewBag.Title = "Index";
}

<h2> Afisare task-uri </h2>
<br />
@if(ViewBag.Message != null){
    <h2 class="alert-success p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

<br />

<a class="btn btn-success" href="/Tasks/New">Adauga task</a>
<br />
<br />

@foreach(Taskmanager.Models.Task task in ViewBag.Tasks){
    <div class="card">
        <div class="card-body">
            <h3 class="card-title alert-success py-3 px-3 rounded-2"> @task.Title</h3>

            <div class="card-text">
                @task.Description
            </div>

            <div class="d-flex justify-content-between flex-row mt-5">
                @*<div><i class="bg-info bi-globe">@task.Status.StatusName</i></div>*@
                <div><i class="bg-info bi-person">@task.User.UserName</i></div>
                <span class="alert-success">@task.StartDate</span>
                <span class="alert-success">@task.EndDate</span>
            </div>
        </div>

        <a class="btn btn-success" href="/Tasks/Show/@task.Id">Afisare task</a>
        <a class="btn btn-warning" href="/Tasks/Edit/@task.Id">Editare task</a>


    </div>
}

