
<div class="row h-100">
    <div class="col-md-3 overflow-auto min-vh-100">
        <div class="row">
            <div class="col-md-12">
                <h3>User Information</h3>
                <p>Name: @User.Identity.Name</p>
            </div>
        </div>
        <hr />
        <h3>Manages Teams</h3>
        <ul>
            @foreach(var i in ViewBag.Teams_C)
            {
                <li onclick="window.location='/Team/View/@i.Id'">@i.Name</li>
            }
            <button type="button" class="btn btn-primary btn-sm" onclick="window.location='/Team/Create'">Add a team</button>

        </ul>
        <hr />
        <h3>Participating in  Teams</h3>
        <ul>
            @foreach(var i in ViewBag.Teams_P)
            {
                <li onclick="window.location='/Team/View/@i.Id'">@i.Name</li>
            }
            
        </ul>
    </div>
    <div class="col-md-9 overflow-auto border-start border-dark min-vh-100">
        <h3>Projects you are in</h3>
        <ul>
            @foreach(var i in ViewBag.Project_P)
            {
                <li onclick ="window.location='/Project/View/@i.Id'">@i.Name</li>
            }
        </ul>
    </div>
</div>
