@model Projects

<div class="container">
    <div class="row">
        <h1 class="text-center">@Model.Name</h1>
        <div class="col-md-8 col-md-offset-2">
            <h2>Description</h2>

            <div class="card border-primary mb-3 p-1" style="max-width: 20rem;">
                <p class="card-text">@Model.Description</p>
            </div>

            <h2>Tasks</h2>
            <ul>
                @foreach (var i in @ViewBag.Tasks)
                {
                    <li onclick="window.location='/Tasks/Show/@i.Id'" style="list-style: none;">
                        <button type="button" class="btn btn-primary mb-3">
                            @i.Title
                        </button>
                    </li>
                }
            </ul>
            <a class="btn btn-success btn-lg" href="/Tasks/New/@Model.Id">Adauga task</a>
        </div>
        <br />
     
    </div>
    <hr />

    @{
        if(string.Compare(TempData["admin"].ToString(),"0") == 0 ){
            <div class="w-100">
                <form action="/Project/Delete" method="POST" class="form-horizontal d-inline-block">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input type="hidden" name="team_id" value="@Model.IdTeam" />
                    <button type="submit" class="btn btn-danger btn-lg">Delete </button>
                </form>
                <button class="btn btn-success btn-lg d-inline-block float-end" onclick="window.location='/Project/Edit/@Model.Id'">Edit</button>
            </div>
        }
    }
   
    
</div>
